<UserControl x:Class="TestBrightness.WMIBrightnessCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TestBrightness"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="150">
	<GroupBox Header="WMI Brightness" Margin="4" IsEnabled="{Binding WmiMonitorBrightnessSet, Mode=OneWay}">
		<Grid Margin="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<CheckBox x:Name="WmiMonitorBrightnessChk" Grid.Row="0" Content="Enabled" IsChecked="{Binding WmiMonitorBrightnessSet, Mode=OneWay}" IsEnabled="False" />
			<TextBlock Grid.Row="1" Text="{Binding WmiMonitorBrightness}" HorizontalAlignment="Center" />
			<Slider x:Name="WMIBrightness"  Grid.Row="2" Orientation="Vertical" Minimum="0"  Maximum="100" Value="{Binding WmiMonitorBrightness}" HorizontalAlignment="Center" ValueChanged="WMIBrightness_ValueChanged" />
		</Grid>
	</GroupBox>
</UserControl>