<Window x:Class="TestBrightness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestBrightness"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
	<Grid>
		<TabControl x:Name="tabControl" ItemsSource="{Binding MonitorSettings}">
			<TabControl.ItemTemplate>
				<DataTemplate>
					<TextBlock Grid.Column="0" x:Name="_HeaderText" Text="{Binding DeviceName}" />
				</DataTemplate>
			</TabControl.ItemTemplate>
			<TabControl.ContentTemplate>
				<DataTemplate>
					<Grid>
						<TextBlock Text="test" />
						<local:MonitorCapsCtrl x:Name="MonitorCapsCtrl" DataContext="{Binding}" />
					</Grid>
				</DataTemplate>
			</TabControl.ContentTemplate>
		</TabControl>
	</Grid>
</Window>